                            <goal>exec</goal>
                        </goals>
                        <configuration>
                            <workingDirectory>${project.basedir}/kotlin-build-plugins</workingDirectory>
                            <executable>./gradlew</executable>
                            <arguments>
                                <argument>build</argument>
                            </arguments>
                        </configuration>
                    </execution>
                    <execution>
                        <id>test-kotlin-build-plugins</id>
