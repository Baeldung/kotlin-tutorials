class FileWriteBytesTest {

    @Test
    fun testWriteBytesToFile() {

        val fileName = "example.bin"
        val byteContent = byteArrayOf(72, 101, 108, 108, 111) // "Hello" in ASCII

        File(fileName).writeBytes(byteContent)

        val file = File(fileName)
        assertTrue(file.exists(), "File should exist after writing byte content to it.")
        assertArrayEquals(byteContent, file.readBytes(), "File content should match the expected byte content.")

        file.delete()
    }
}
